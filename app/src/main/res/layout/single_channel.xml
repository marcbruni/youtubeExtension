<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textSize="32sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Description"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="27dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.488" />

    <TextView
        android:id="@+id/lblViewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Views:"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/viewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewCount"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/lblViewCount"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/lblSubscriberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribers:"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblViewCount" />

    <TextView
        android:id="@+id/subscriberCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lblSubscriberCount"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewCount" />

    <TextView
        android:id="@+id/lblVideoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Videos:"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/lblSubscriberCount"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/videoCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lblVideoCount"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblSubscriberCount" />

    <TextView
        android:id="@+id/lblViewsPerVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Views per video:"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/lblVideoCount"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/viewsPerVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lblViewsPerVideo"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/lblVideoCount" />

    <TextView
        android:id="@+id/lblCommentsPerVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="7dp"
        android:text="Discussion Comments:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblViewsPerVideo" />

    <TextView
        android:id="@+id/commentsPerVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lblCommentsPerVideo"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/lblViewsPerVideo" />

    <ImageView
        android:id="@+id/imgSearchResultThumb"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:layout_editor_absoluteY="295dp"
        tools:layout_editor_absoluteX="92dp" />



</android.support.constraint.ConstraintLayout>